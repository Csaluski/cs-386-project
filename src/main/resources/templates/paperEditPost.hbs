    <title>Pulp: Edit Paper Page</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <meta name="author" content="Hannah Larreau">
    <meta name="description" content="The page where users can edit the data related to a previously uploaded PDF.">
</head>

<body>

<header id="mainHeader">
    <h1>Pulp: Edit Paper </h1>
</header>

{{> ../snipits/navigation}}

<main>
    <h1> Edit {{title}} </h1><br><br>

    <!--ToDo: Autofill existing paper details -->

    <form method="post" action="paperEditPost.hbs">
        <br><label for="title">Title:</label><br>
        <input type="text" id="title" name="title"><br>

        <br><label for="abstract">Abstract:</label><br>
        <input type="text" id="abstract" name="abstract"><br>

        <br><label for="doi">DOI:</label>
        <input type="text" id="doi" name="doi"><br>

        <br><label for="addAuthor">Add Author:</label>
        <input type="text" id="addAuthor" name="addAuthor"><br>

        <!-- ToDo: make a search for existing tags -->
        <br><label for="addTag">Add Tag:</label>
        <input type="text" id="addTag" name="addTag"><br>

        <br><label for="addOwner">Add Owner:</label>
        <input type="text" id="addOwner" name="addOwner"><br>

        <input type="submit" value="Submit">
    </form>

