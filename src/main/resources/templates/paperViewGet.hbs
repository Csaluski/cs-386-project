<body>
<h1> View {{title}} </h1>

<div class="paper"> <!-- style paper in css or change class-->
    <article>
        <h2>Abstract:</h2>
        <p>
            {{paperAbstract}}
        </p>
    </article>

    <iframe src="data:application/pdf;base64,{{paperFile}}" title="" width="" height="" allowfullscreen="true" loading="eager"></iframe>
    <input type="button" id="fullscreen" name="fullscreen" onclick="requestFullscreen()">

</div>

<div class="sidebar"> <!-- style sidebar in css or change class-->
    <article>
        <ul>
            <li>Title: {{title}}</li>
            <li>Doi: {{doi}}</li>
            <li>Authors: {{authors}}</li>
            <li>Owners: {{owners}}</li>
            <li>Tags: {{tags}}</li>
        </ul>
    </article>
    <input type="button" id="redirect" name="goToEditPage"> <!-- onclick="go to Edit Paper Page" -->
    <p><a href="/" >Back to Home</a></p>
    <p><a href="profile" >Open Profile</a></p>
    <p><a href="uploadPDF" >Upload a Paper</a></p>
    <p><a href="editPDF" >Edit a paper</a></p>
    <p><a href="/tag" >Add tag</a></p>
    <p><a href="/removeTag" >Remove tag</a></p>
</div>
</body>
</html>
